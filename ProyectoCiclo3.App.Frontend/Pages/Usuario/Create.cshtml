@model ProyectoCiclo3.App.Frontend.Pages.FormUsuarioModel
@{
}
 
<div class="text-center">
<form method="post">
  <label for="nombre" class="form-label">Nombre:</label>
  <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" asp-for="Usuario.nombre" required>
  <label for="apellidos" class="form-label">Apellidos:</label>
  <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Apellidos" asp-for="Usuario.apellidos" required>
  <label for="direccion" class="form-label">Dirección:</label>
  <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Dirección" asp-for="Usuario.direccion" required>
  <label for="telefono" class="form-label">Teléfono:</label>
  <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Teléfono" asp-for="Usuario.telefono" required>
  <label for="ciudad" class="form-label">Ciudad:</label>
  <input type="text" class="form-control" id="ciudad" name="ciudad" placeholder="Ciudad" asp-for="Usuario.ciudad" required>
  @* <label for="email" class="form-label">Email:</label> *@
  @* <input type="email" class="form-control" id="direccion" name="direccion" placeholder="Dirección"> *@
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>